shopmenu();
}
}
}
if (form.is_pressed(food))
{
    if (cookies > 0)
{
        double cookiesToEat = min(10 * rank, cookies);
pool.destroy_sound(foodslot);
        foodslot = pool.play_stationary("chip"+random(1,3)+".ogg", false);
